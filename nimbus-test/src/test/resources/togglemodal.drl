import com.antheminc.oss.nimbus.domain.model.state.EntityState.Param;

rule "show modal"

    when
        $param: Param(!$param.isVisible())
    then
        $param.setVisible(true);
end

rule "hide modal"

    when
        $param: Param($param.isVisible())
    then
        $param.setVisible(false);
end
